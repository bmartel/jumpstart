
<h2 class="text-center mt-4"><%= t "devise.invitations.new.header" %></h2>

<div class="flex flex-col sm:max-w-lg sm:p-6 sm:shadow-md sm:mx-auto sm:mt-2 md:mt-4 rounded">

  <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f| %>
    <%= devise_error_messages! %>

    <% resource.class.invite_key_fields.each do |field| -%>
      <div class="mt-2">
        <%= f.text_field field, placeholder: field, class: 'w-full px-4 py-3 leading-none border border-grey-light rounded' %>
      </div>
    <% end -%>

    <div class="mt-2 flex justify-end">
      <div class="hidden md:block md:w-1/2"></div>
      <%= f.submit t("devise.invitations.new.submit_button"), class: 'w-full md:w-1/2 md:ml-2 px-4 py-3 rounded text-white bg-blue hover:bg-blue-light cursor-pointer' %>
    </div>
  <% end %>

</div>
